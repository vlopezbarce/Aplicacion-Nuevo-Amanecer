<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jardin"
    tools:context=".Game5Fragment">

    <View
        android:id="@+id/nube"
        android:layout_width="545dp"
        android:layout_height="234dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="729dp"
        android:layout_marginBottom="464dp"
        android:adjustViewBounds="true"
        android:background="@drawable/nube"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/canastamanzana"
        android:layout_width="274dp"
        android:layout_height="128dp"
        android:layout_marginStart="662dp"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/canastamanzana"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/canastanaranja"
        android:layout_width="274dp"
        android:layout_height="128dp"
        android:layout_marginStart="956dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/canastanaranja"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/canastaplatano"
        android:layout_width="274dp"
        android:layout_height="128dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="941dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/canastaplatano"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/canastauva"
        android:layout_width="274dp"
        android:layout_height="128dp"
        android:layout_marginStart="365dp"
        android:layout_marginEnd="641dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/canastauva"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/uva"
        android:layout_width="187dp"
        android:layout_height="144dp"
        android:layout_marginStart="595dp"
        android:layout_marginEnd="528dp"
        android:layout_marginBottom="364dp"
        android:adjustViewBounds="true"
        android:background="@drawable/uva"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/platano"
        android:layout_width="141dp"
        android:layout_height="158dp"
        android:layout_marginStart="595dp"
        android:layout_marginEnd="558dp"
        android:layout_marginBottom="352dp"
        android:adjustViewBounds="true"
        android:background="@drawable/platano"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/naranja"
        android:layout_width="157dp"
        android:layout_height="147dp"
        android:layout_marginStart="595dp"
        android:layout_marginEnd="558dp"
        android:layout_marginBottom="364dp"
        android:adjustViewBounds="true"
        android:background="@drawable/naranja"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/manzana"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginStart="595dp"
        android:layout_marginEnd="558dp"
        android:layout_marginBottom="364dp"
        android:adjustViewBounds="true"
        android:background="@drawable/manzana"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBarStyle"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textContador"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="664dp"
        android:background="@color/transparente"
        android:scaleType="fitCenter"
        android:src="@drawable/flecha_atras_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>